<Window x:Class="WinGit.Views.WindowRepo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WinGit - MySecretProject Repo" Height="600" Width="800">
    <DockPanel LastChildFill="False">
		<Border BorderBrush="Black" BorderThickness="0,0,1,0" Width="125">
			<Grid Background="{DynamicResource BrushMediumGray}" Margin="0">
				<Grid.RowDefinitions>
					<RowDefinition Height="90"/>
					<RowDefinition Height="90"/>
					<RowDefinition Height="90"/>
					<RowDefinition/>
				</Grid.RowDefinitions>
				<Button Content="Branches" Margin="10,10,10,0"/>
				<Button Content="Changes" Margin="10,10,10,0" Grid.Row="1"/>
				<Button Content="Remote" Margin="10,10,10,0" Grid.Row="2"/>
			</Grid>
		</Border>
	</DockPanel>
</Window>
